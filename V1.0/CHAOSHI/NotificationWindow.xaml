<Window x:Class="CHAOSHI.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHAOSHI"
        mc:Ignorable="d"
        Title="更改通知" Height="300" Width="400" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown"
        Icon="shop_easyicon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="142*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="10,0,9.6,141.6" Text="更改首页通知为：" FontSize="20" TextAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="2"></TextBlock>
        <TextBox Grid.Row="1" Margin="10,4.8,9.6,4.6" Name="TxtBoxNotification" FontSize="20" Grid.ColumnSpan="2"></TextBox>
        <Button Grid.Row="2" Grid.Column="0" Name="BtnYes" Margin="10 5 10 5" Content="确定" FontSize="20" Click="BtnYes_Click" IsDefault="True"></Button>
        <Button Grid.Row="2" Grid.Column="1" Name="BtnNo" Margin="10 5 10 5" Content="取消" FontSize="20" Click="BtnNo_Click"></Button>
    </Grid>
</Window>
